#include<stdio.h>
int main()
{
    int n,i,j,k=0,num;
    scanf("%d",&n);
    num=n;
    for(i=1;i<=(2*n)-1;i++)
    {
        for(j=1;j<=(2*n)-1;j++)
        {
            
            if(i!=1&&i!=2*n-1)
            {
                    printf("%d ",num);
            i>j?num--:num;
            j>=(2*n)-i?num++:num;
            if(num>n)
            num--;
        }
        else
        printf("%d ",num);
        
            
        }
        printf("\n");
    }
    return 0;
}
